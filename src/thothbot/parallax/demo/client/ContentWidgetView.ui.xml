<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  >

  <ui:style>
    .name {
      color: #4B4A4A;
      font-size: 15px;
      font-weight: bold;
    }
    
    .description {
      color: #4B4A4A;
      padding: 0px 3px;
    }
    
    .header {
    	margin: 10px;
    }

    .buttons {
		width: 100%;
		padding: 3px 1px;
	}
  </ui:style>

	<g:DockLayoutPanel unit='PX'>
	<g:north size="70">

		<!-- Header. -->
		<g:DockLayoutPanel unit='PX' stylePrimaryName='{style.header}'>
			<g:west size="240.0">
				<g:VerticalPanel>
					<g:SimpleLayoutPanel stylePrimaryName='{style.name}' ui:field='nameField'/>
   			    	<g:HorizontalPanel stylePrimaryName='{style.buttons}'>
						<g:ToggleButton ui:field='switchAnimation' width="20px" enabled="false" title="Enable/disable animation">A</g:ToggleButton>
						<g:Button ui:field='buttonFullScreen' width="25px" enabled="false" title="Fullscreen">FS</g:Button>
						<g:Label>3D</g:Label>
						<g:ToggleButton ui:field='switchEffectNone' width="20px" title="No 3D effects" down="true">N</g:ToggleButton>
						<g:ToggleButton ui:field='switchEffectAnaglyph' width="20px" title="Anaglyph effect">A</g:ToggleButton>
						<g:ToggleButton ui:field='switchEffectStereo' width="20px" title="Oculus Rift effect">B</g:ToggleButton>
						<g:ToggleButton ui:field='switchEffectParallaxBarrier' width="20px" title="Stereo effect">C</g:ToggleButton>
						<g:ToggleButton ui:field='switchEffectOculusRift' width="20px" title="Stereo effect">C</g:ToggleButton>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:west>
			<g:center>
				<g:HTMLPanel height="41px">
					<div class='{style.description}' ui:field='descriptionField'>Description</div>
				</g:HTMLPanel>
			</g:center>
			<g:east size="200.0">
				<g:SimpleLayoutPanel ui:field='debuggerPanel' height="50px"/>
			</g:east>
		</g:DockLayoutPanel>

	</g:north>
	
	<g:center>
		<g:SimpleLayoutPanel ui:field='examplePanel' />
	</g:center>

</g:DockLayoutPanel>

</ui:UiBinder> 