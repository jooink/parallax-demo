<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
    
    .contentButtons {
      background-color: #d7dde8;
      border-bottom: 1px solid #c3c3c3;
      padding: 0px 10px;
    }
    
    .contentButton {
      margin-left: 10px;
      color: #888888;
      font-weight: bold;
      cursor: hand;
      cursor: pointer;
      line-height: 20pt;
      vertical-align: middle;
    }
        
    .contentButton:hover {
      color: #4B4A4A;
      text-decoration: underline;
    }

	</ui:style>

	<g:DockLayoutPanel unit='PT'>
		<g:north size='20'>
			<g:DockLayoutPanel unit='PX' styleName='{style.contentButtons}'>
				<g:lineStart size='225'>
					<g:SimplePanel>
						<g:Anchor ui:field='linkIndex' addStyleNames='{style.contentButton}'>
							<ui:msg key='indexWidget'>All Examples</ui:msg>
						</g:Anchor>
					</g:SimplePanel>
				</g:lineStart>
				<g:center>
					<g:FlowPanel ui:field='bottonPanel'>
						<g:Anchor ui:field='linkExample' addStyleNames='{style.contentButton}'>
							<ui:msg key='contentWidgetExample'>Example</ui:msg>
						</g:Anchor>
						<g:Anchor ui:field='linkSource'
							addStyleNames='{style.contentButton}'>
							<ui:msg key='contentWidgetSource'>Source Code</ui:msg>
						</g:Anchor>
					</g:FlowPanel>

				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:center>
			<g:SimplePanel ui:field='contentWidget'></g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 