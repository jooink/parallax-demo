<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  >

  <ui:style>
    .name {
      color: #4B4A4A;
      font-size: 17px;
      font-weight: bold;
    }
    
    .description {
      color: #4B4A4A;
      padding: 3px 0px;
    }
  </ui:style>

	<g:DockLayoutPanel unit='PX'>
	<g:north size="70">

		<!-- Header. -->
		<g:DockLayoutPanel unit='PX'>
			<g:west size="73.0">
				<g:ToggleButton ui:field='animationSwitch' width="60px" enabled="false">Animation</g:ToggleButton>
			</g:west>
			<g:center>
				<g:HTMLPanel height="41px">
					<div class='{style.name}' ui:field='nameField'>Name</div>
					<div class='{style.description}' ui:field='descriptionField'>Description</div>
				</g:HTMLPanel>
			</g:center>
		</g:DockLayoutPanel>

	</g:north>
	<g:center>
		<g:LayoutPanel ui:field='examplePanel' />
	</g:center>
	<!-- Content. -->
</g:DockLayoutPanel>

</ui:UiBinder> 